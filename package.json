{
  "name": "flare",
  "private": false,
  "version": "0.1.0",
  "description": "Flare Forecast",
  "keywords": [
    "weather",
    "forecast",
    "node",
    "webpack"
  ],
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "axios": "^0.18.0",
    "classnames": "^2.2.5",
    "lodash-es": "^4.17.11",
    "moment": "^2.13.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^5.1.0",
    "react-tooltip": "^3.9.0",
    "redux": "^4.0.1"
  },
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --hot",
    "build": "NODE_ENV=production webpack",
    "deploy": "yarn build && firebase deploy",
    "lint-staged": "lint-staged"
  },
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/markmur/flare.git"
  },
  "author": "Mark Murray <mark.murray.ie@gmail.com> (https://markmurray.co)",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "autoprefixer-loader": "^3.2.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.1",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "lint-staged": "^8.0.4",
    "node-sass": "^4.9.4",
    "pre-commit": "^1.2.2",
    "precss": "^3.1.2",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "react-hot-loader": "^4.3.12",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "xo": "^0.23.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "rules": {
      "camelcase": 0,
      "unicorn/filename-case": 0
    },
    "extends": "xo-react",
    "plugins": [
      "react"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add",
      "xo"
    ]
  },
  "precommit": {
    "run": [
      "lint-staged"
    ]
  }
}
