{
  "name": "flare",
  "private": false,
  "version": "0.1.0",
  "description": "Flare Forecast",
  "keywords": [
    "weather",
    "forecast",
    "node",
    "webpack"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "classnames": "^2.2.5",
    "moment": "^2.13.0",
    "node-sass": "^4.10.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-scripts": "2.1.1",
    "react-tooltip": "^3.9.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy": "yarn build && firebase deploy",
    "lint-staged": "lint-staged"
  },
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/markmur/flare.git"
  },
  "author": "Mark Murray <mark.murray.ie@gmail.com> (https://markmurray.co)",
  "license": "MIT",
  "devDependencies": {
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "lint-staged": "^8.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "react-hot-loader": "^4.3.12",
    "xo": "^0.23.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "rules": {
      "camelcase": 0,
      "unicorn/filename-case": 0
    },
    "extends": "xo-react",
    "plugins": [
      "react"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add",
      "xo"
    ]
  },
  "precommit": {
    "run": [
      "lint-staged"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
